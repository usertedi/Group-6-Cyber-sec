{
  "manifest_version": 3,
  "name": "Parental Control Extension",
  "version": "0.1",
  "description": "Blocks harmful sites & keywords for safe browsing",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "src/dashboard/dashboard.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "icons": {
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}